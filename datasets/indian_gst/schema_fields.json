{
  "description": "Schema definition for synthetic Indian GST tax invoice dataset",
  "version": "1.0.0",
  "flat_fields": {
    "invoice_number": {
      "type": "string",
      "description": "Unique invoice identifier (e.g., 'INV-2024-001')",
      "required": true
    },
    "invoice_date": {
      "type": "string", 
      "format": "YYYY-MM-DD",
      "description": "Date when invoice was issued",
      "required": true
    },
    "supplier_name": {
      "type": "string",
      "description": "Name of the supplier/vendor company",
      "required": true
    },
    "supplier_gstin": {
      "type": "string",
      "pattern": "^[0-9]{2}[A-Z]{5}[0-9]{4}[A-Z]{1}[1-9A-Z]{1}Z[0-9A-Z]{1}$",
      "description": "15-character GSTIN of the supplier",
      "required": true
    },
    "supplier_address": {
      "type": "string",
      "description": "Complete address of the supplier",
      "required": true
    },
    "recipient_name": {
      "type": "string", 
      "description": "Name of the recipient/buyer company",
      "required": true
    },
    "recipient_gstin": {
      "type": "string",
      "pattern": "^[0-9]{2}[A-Z]{5}[0-9]{4}[A-Z]{1}[1-9A-Z]{1}Z[0-9A-Z]{1}$",
      "description": "15-character GSTIN of the recipient",
      "required": true
    },
    "recipient_address": {
      "type": "string",
      "description": "Complete address of the recipient",
      "required": true
    },
    "place_of_supply": {
      "type": "string",
      "description": "State name where goods/services are supplied",
      "required": true
    },
    "reverse_charge": {
      "type": "string",
      "enum": ["Yes", "No"],
      "description": "Whether reverse charge mechanism is applicable",
      "required": true
    },
    "taxable_total": {
      "type": "number",
      "description": "Total taxable amount before taxes (sum of all line item taxable values)",
      "required": true
    },
    "total_tax": {
      "type": "number", 
      "description": "Total tax amount (CGST + SGST + IGST)",
      "required": true
    },
    "total_amount": {
      "type": "number",
      "description": "Final total amount including all taxes",
      "required": true
    },
    "total_amount_in_words": {
      "type": "string",
      "description": "Total amount written in words (may be blank)",
      "required": false
    },
    "phone_number": {
      "type": "string",
      "description": "Contact phone number (optional)",
      "required": false
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "Contact email address (optional)",
      "required": false
    }
  },
  "nested_fields": {
    "line_items": {
      "type": "array",
      "description": "List of invoice line items with individual product/service details",
      "items": {
        "description": {
          "type": "string",
          "description": "Product or service description",
          "required": true
        },
        "hsn_sac": {
          "type": "string",
          "description": "HSN (Harmonized System of Nomenclature) or SAC (Service Accounting Code)",
          "required": true
        },
        "quantity": {
          "type": "number",
          "description": "Quantity of items",
          "required": true
        },
        "unit_price": {
          "type": "number",
          "description": "Price per unit before taxes",
          "required": true
        },
        "taxable_value": {
          "type": "number",
          "description": "Total taxable amount for this line (quantity Ã— unit_price)",
          "required": true
        },
        "cgst_rate": {
          "type": "number",
          "description": "Central GST rate percentage (for intra-state transactions)",
          "required": false
        },
        "cgst_amount": {
          "type": "number", 
          "description": "Central GST amount (for intra-state transactions)",
          "required": false
        },
        "sgst_rate": {
          "type": "number",
          "description": "State GST rate percentage (for intra-state transactions)",
          "required": false
        },
        "sgst_amount": {
          "type": "number",
          "description": "State GST amount (for intra-state transactions)",
          "required": false
        },
        "igst_rate": {
          "type": "number",
          "description": "Integrated GST rate percentage (for inter-state transactions)",
          "required": false
        },
        "igst_amount": {
          "type": "number",
          "description": "Integrated GST amount (for inter-state transactions)",
          "required": false
        },
        "line_total": {
          "type": "number",
          "description": "Total amount for this line including all applicable taxes",
          "required": true
        }
      }
    }
  },
  "notes": {
    "tax_logic": "For intra-state transactions: CGST + SGST = total GST rate. For inter-state: IGST = total GST rate.",
    "gst_rates": "Common GST rates used: 5%, 12%, 18%",
    "gstin_format": "2-digit state code + 10-character PAN + entity number + 'Z' + checksum digit",
    "synthetic_data": "All data is synthetic and generated using Faker library. No real company or personal information is used."
  }
}